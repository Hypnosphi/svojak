{
  "version": 2,
  "alias": "svojak.de",
  "env": {
    "YANDEX_TOKEN": "@yandex-token",
    "FOLDER_ID": "@folder-id"
  },
  "builds": [
    {"src": "next.config.js", "use": "@now/next"},
    {"src": "server/**/*.js", "use": "@now/node"}
  ],
  "routes": [
    { "src": "/api/themes", "dest": "server/api/themes.js" },
    { "src": "/tts.ogg", "dest": "server/tts.ogg.js" },
    { "src": "/anek.ogg", "dest": "server/anek.ogg.js" }
  ]
}
